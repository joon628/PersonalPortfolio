# Generated by Ansible on {{ ansible_date_time.iso8601 }}

services:
  portfolio:
    container_name: {{ app_name }}-admin
    environment:
      - NODE_ENV={{ app_env }}
      - PORT={{ app_port }}
    volumes:
      # Persistent database storage - preserve existing data
      - {{ app_path }}/{{ database_name }}:/app/{{ database_name }}
      # Data directory for additional persistence
      - {{ app_path }}/data:/app/data
      # Environment file
      - {{ app_path }}/.env:/app/.env:ro
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "node", "-e", "http.get('http://localhost:{{ app_port }}/api/portfolio/public', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"